<UserControl
  x:Class="Oscilloscope.VariableColorPicker"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Oscilloscope"
  xmlns:vm="clr-namespace:Oscilloscope.ViewModels"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  d:DataContext="{d:DesignInstance Type=vm:VariableColorPickerViewModel}"
  mc:Ignorable="d"
>
  <hc:ColorPicker
    SelectedBrush="{Binding Result}"
    Canceled="ColorPickerCanceled"
    Confirmed="ColorPickerConfirmed"
  />
</UserControl>
