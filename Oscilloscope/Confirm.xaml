<UserControl
  x:Class="Oscilloscope.Confirm"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Oscilloscope"
  xmlns:vm="clr-namespace:Oscilloscope.ViewModels"
  d:DataContext="{d:DesignInstance Type=vm:ConfirmViewModel}"
  mc:Ignorable="d"
  d:DesignHeight="450"
  d:DesignWidth="800"
>
  <Border
    Background="{DynamicResource RegionBrush}"
    CornerRadius="20"
    BorderThickness="1"
    BorderBrush="{DynamicResource BorderBrush}"
    Padding="20"
    Margin="20"
  >
    <DockPanel>
      <TextBlock
        Text="{Binding Title}"
        DockPanel.Dock="Top"
        HorizontalAlignment="Center"
        FontSize="32"
        TextWrapping="Wrap"
      />
      <Grid DockPanel.Dock="Bottom" ColumnDefinitions="*,10,*">
        <Button
          Style="{StaticResource ButtonPrimary}"
          Content="确定"
          HorizontalAlignment="Stretch"
          Command="{Binding OkCommand}"
        />
        <Button
          Grid.Column="2"
          Style="{StaticResource ButtonDanger}"
          Content="取消"
          HorizontalAlignment="Stretch"
          Command="{Binding CancelCommand}"
        />
      </Grid>
      <ScrollViewer Margin="0,20">
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
      </ScrollViewer>
    </DockPanel>
  </Border>
</UserControl>
